<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="tracer_odom" params="parent">
    
    <link name="rueda_izquierda_Link">
      <inertial>
        <origin xyz="0 0 0.037" rpy="0 0 0" />
        <mass value="0.85" />
        <inertia ixx="0.0011" ixy="0" ixz="0" iyy="0.0011" iyz="0" izz="0.0015" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
           <mesh filename="package://hospital-agv-sim/meshes/rueda_izquierda_Link.STL" />
        </geometry>
        <material name="black"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.0625" length="0.04" />
        </geometry>
      </collision>
    </link>

    <joint name="rueda_izquierda_joint" type="continuous">
      <origin xyz="0 0.17 0.0625" rpy="-1.5708 0 0" /> 
      <parent link="${parent}" />
      <child link="rueda_izquierda_Link" />
      <axis xyz="0 0 1" /> 
    </joint>
    
    

    <link name="rueda_derecha_Link">
      <inertial>
        <origin xyz="0 0 -0.037" rpy="0 0 0" />
        <mass value="0.85" />
        <inertia ixx="0.0011" ixy="0" ixz="0" iyy="0.0011" iyz="0" izz="0.0015" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
           <mesh filename="package://hospital-agv-sim/meshes/rueda_derecha_Link.STL" />
        </geometry>
        <material name="black"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.0625" length="0.04" />
        </geometry>
      </collision>
    </link>

    <joint name="rueda_derecha_joint" type="continuous">
      <origin xyz="0 -0.17 0.0625" rpy="-1.5708 0 0" />
      <parent link="${parent}" />
      <child link="rueda_derecha_Link" />
      <axis xyz="0 0 1" />
    </joint>

  </xacro:macro>
</robot>
